<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8"
    android:layout_marginLeft="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_8"
    android:layout_marginTop="@dimen/cardview_default_radius"
    app:cardCornerRadius="@dimen/margin_4"
    card_view:cardCornerRadius="@dimen/cardview_default_radius">

    <RelativeLayout
        android:id="@+id/rl_sub_sub_category"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_margin="@dimen/margin_4"
        android:gravity="center_horizontal">

        <!--<ImageView
            android:id="@+id/iv_sub_category"
            android:layout_width="@dimen/sub_category_iv_width"
            android:layout_height="@dimen/sub_category_iv_width"
            android:background="@drawable/test_a" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_title"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/fab_margin"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/tv_sub_category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_title"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/fab_margin" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/mar_address"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/fab_margin" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/black_overlay">

                <TextView
                    android:id="@+id/tv_contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="@string/hint_title"
                    android:paddingLeft="@dimen/fab_margin"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/iv_lisc_call"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_8"
                    android:src="@drawable/ic_phone"
                    android:tint="@color/colorAccent" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>